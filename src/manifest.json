{
    "manifest_version": 3,
    "name": "Bhaikaamdo - streamline your entire job search journey",
    "version": "1.0",
    "description": "Powerful AI-driven tools that work together to streamline your entire job search journey",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "storage",
        "cookies",
        "sidePanel",
        "offscreen"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "side_panel": {
        "default_path": "src/sidepanel/index.html"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/index.tsx"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "src/background/index.ts"
    }
}