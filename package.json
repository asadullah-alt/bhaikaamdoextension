{
  "name": "bhaikaamdo-extension",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:chrome": "BROWSER=chrome npm run build",
    "build:firefox": "BROWSER=firefox npm run build",
    "pack:chrome": "npm run build:chrome && cd dist/chrome && zip -r ../../bhaikaamdo-extension-chrome.zip . && cd -",
    "pack:firefox": "npm run build:firefox && cd dist/firefox && zip -r ../../bhaikaamdo-extension-firefox.zip . && cd -",
    "preview": "vite preview"
  },
  "dependencies": {
    "@react-pdf/renderer": "^3.1.14",
    "file-saver": "^2.0.5",
    "lucide-react": "^0.300.0",
    "quill-to-pdf": "^1.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sonner": "^2.0.7"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.21",
    "@types/chrome": "^0.0.254",
    "@types/node": "^25.2.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^7.3.1"
  }
